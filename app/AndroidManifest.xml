<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kuxhausen.huemore"
    android:versionCode="1"
    android:versionName="2.6.1" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/huemore"
        android:installLocation="internalOnly"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.kuxhausen.huemore.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.Sherlock" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kuxhausen.huemore.SecondActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.Sherlock" >
        </activity>
        <activity
            android:name="com.kuxhausen.huemore.editmood.EditMoodPagerDialogFragment"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:noHistory="true"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.Sherlock" >
        </activity>

        <provider
            android:name="com.kuxhausen.huemore.persistence.HueMoreProvider"
            android:authorities="com.kuxhausen.provider.huemore.database"
            android:exported="true" >
        </provider>

        <!-- Listen for the "edit" action -->
        <!-- Listen for the "fire" action -->

        <activity
            android:name="com.kuxhausen.huemore.DecodeErrorActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.Sherlock" >
        </activity>
		<activity
            android:name="com.kuxhausen.huemore.SharedMoodReaderActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.Sherlock"
            android:noHistory="true" >

            <intent-filter>
	          <action android:name="android.intent.action.VIEW" />
	          <category android:name="android.intent.category.DEFAULT" />
	          <category android:name="android.intent.category.BROWSABLE" />
	          <data android:scheme="http" android:host="lampshade.io"
	                android:path="/share" />
        	</intent-filter>
        </activity>
        
        <receiver android:name="com.kuxhausen.huemore.timing.AlarmReciever" >
        </receiver>

        <receiver android:name="com.kuxhausen.huemore.timing.BootSetter" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        
   <receiver
            android:name="com.kuxhausen.huemore.widget.GroupWidgetProvider"
            android:exported="true" android:label="@string/widget_groups_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DELETED" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/group_widgetinfo" />
        </receiver>

        <service
            android:name="com.kuxhausen.huemore.widget.GroupWidgetService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
 		       
        <service
            android:name="com.kuxhausen.huemore.MoodExecuterService"
            android:enabled="true"
            android:exported="false" >
        </service>
        
        <activity 
            android:name="com.kuxhausen.huemore.glass.VoiceLauncherService"
            android:icon= "@drawable/glass_icon"
            android:enabled="true"
            android:exported="true">
	        <intent-filter>
	            <action
	                android:name="com.google.android.glass.action.VOICE_TRIGGER" />
	        </intent-filter>
	        <meta-data android:name="com.google.android.glass.VoiceTrigger"
	            android:resource="@xml/voice_trigger_brightness" />
    	</activity>
    </application>

</manifest>